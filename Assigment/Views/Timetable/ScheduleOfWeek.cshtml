@{
    ViewData["Title"] = "ScheduleOfWeek";
}
@using Assigment.Models;
@model List<SlotAttendance>

@{
    Layout = "_Layout";
}
<section class="Student-Attendance">
    <div class="container">
        <div class="row">
            <div class="col-md-1 "></div>
            <div class="col-md-10">
                <div class="heading">
                    <h2>
                        Activities for
                        <span id="">(@ViewData["StudentName"])</span>
                    </h2>
                    <p>
                        <b>Note</b>: These activities do not include extra-curriculum activities, such as
                        club activities ...
                    </p>
                    <p>
                        <b>Chú thích</b>: Các hoạt động trong bảng dưới không bao gồm hoạt động ngoại khóa,
                        ví dụ như hoạt động câu lạc bộ ...
                    </p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th rowspan="2">
                                    @*<form>
                                        <span class="dropdown"><strong>Year</strong></span>
                                        <select name="ctl00$mainContent$drpYear" onchange="" id="">
                                            <option selected="selected" value="2022">2022</option>
                                            <option value="2023">2023</option>
                                        </select>
                                    </form>

                                    <br>
                                    Week
                                    <select name="" onchange="" id="">
                                        <option value="17">25/04 To 01/05</option>
                                        <option value="18">02/05 To 08/05</option>
                                        <option selected="selected" value="19">09/05 To 15/05</option>
                                        <option value="20">16/05 To 22/05</option>
                                    </select>*@
                                </th>
                                <th align="center">Mon</th>
                                <th align="center">Tue</th>
                                <th align="center">Wed</th>
                                <th align="center">Thu</th>
                                <th align="center">Fri</th>
                                <th align="center">Sat</th>
                                <th align="center">Sun</th>
                            </tr>
                            <tr>
                                <th align="center">09/05</th>
                                <th align="center">10/05</th>
                                <th align="center">11/05</th>
                                <th align="center">12/05</th>
                                <th align="center">13/05</th>
                                <th align="center">14/05</th>
                                <th align="center">15/05</th>

                            </tr>
                        </thead>
                        <tbody>

                            @for (int i = 1; i < 9; i++)
                            {

                                <tr>
                                    <td>Slot @i </td>
                                    @for (int j = 9; j <= 15; j++)
                                    {
                                        @if (Model.FirstOrDefault(x => x.SlotTimeName == i && x.SlotDate.Day == j) != null)
                                        {
                                            <td>
                                                @{SlotAttendance slot = Model.FirstOrDefault(x => x.SlotTimeName == i && x.SlotDate.Day == j);
                                                }
                                                <a href="/Group/List?SlotID=@slot.SlotId&SlotTimeName=@slot.SlotTimeName&SlotDate=@slot.SlotDate">
                                                    @slot.Slot.Slot.CourseId.ToString()<br />
                                                    @slot.Slot.Slot.TeacherId.ToString()<br />
                                                    @if (slot.Slot.SlotNote.Equals("NOT STARTED")) {
                                                    <p class="text-danger">@slot.Slot.SlotNote</p> 
                                                    }else if (slot.Attendance){
                                                    <p class="text-success">Attendacne</p>
                                                    }
                                                    else
                                                    {
                                                    <p class="text-danger">Absent</p>
                                                    }
                                                    
                                                </a>

                                            </td>
                                        }
                                        else
                                        {
                                            <td>-</td>
                                        }


                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="btn-group" id="btn-Admin">

                    </div>
                </div>
            </div>
            <div class="col-md-1 "></div>
        </div>


    </div>
</section>



